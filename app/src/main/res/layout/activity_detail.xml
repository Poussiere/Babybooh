<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar_detail"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:focusable="false"
        android:theme="@style/ThemeOverlay.MyApp.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        style="@style/Widget.MyApp.Toolbar.Solid"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
                        
                        
 <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bordure_pola"
        android:src="@drawable/monstre10"
        android:id="@+id/detail_photoId"
        android:layout_alignParentStart="true"/>
            
 <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/date_evenement_conteneur"
            android:layout_below="@id/detail_description_view_id">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
            
                      
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ponctuation"
                android:paddingStart="@dimen/space_between_close_textviews"
                android:paddingEnd="@dimen/space_between_close_textviews"
                />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_date_view"
            android:textAppearance="?android:textAppearanceMedium"
            tools:text="12 fÃ©vrier 2018"/>

        </LinearLayout>
        
        
        </RelativeLayout> 
    </ScrollView>

</LinearLayout>
