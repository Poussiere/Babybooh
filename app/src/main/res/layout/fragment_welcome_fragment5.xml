<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/welcome_logo_conteneurr5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/welcome_logo5"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerInside" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_logo_conteneurr5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true">


            <TextView
                android:id="@+id/welcome_fragment_5_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/my_basic_text_size" />


            <TextView
                android:id="@+id/welcome_fragment_5_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/welcome_fragment_5_text1"
                android:layout_centerInParent="true"
                android:fitsSystemWindows="true"
                android:gravity="center"
                android:textAppearance="@style/My.Medium.Text"
                android:textColor="@android:color/white" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
