<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/welcome_logo_conteneurr3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/welcome_logo3"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerInside" />
    </FrameLayout>

    <TextView
        android:id="@+id/welcome_fragment_3_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_logo_conteneurr3"
        android:layout_centerInParent="true"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:text="@string/first_time2"
        android:textAppearance="@style/My.Medium.Text"
        android:textColor="@android:color/white" />


</RelativeLayout>
