<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.poussiere.babybooh.mainFragment1.main_fragment1">


    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:id="@+id/main1_top_conteneur"
        android:background="@color/primary_color_very_very_light"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lancer_veille"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:layout_marginEnd="88dp"
            android:textAppearance="@style/My.Medium.Text"
            android:id="@+id/tv_main1">
        </TextView>
        
        </RelativeLayout>
              
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:id="@+id/main1_fab_conteneur"
        android:layout_below="@id/main1_top_conteneur"
        android:layout_marginTop="-29dp">
        
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boutonLancerVeille"
        app:backgroundTint="@color/color_accent"
        app:srcCompat="@android:drawable/ic_btn_speak_now"
        app:elevation="12dp"
        android:clickable="true"
        app:pressedTranslationZ="12dp"
        android:tint="@color/background_floating_material_dark"
        app:fabSize="normal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        app:borderWidth="0dp"
         android:contentDescription="@string/content_description_veille_bouton" />
                                             
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main1_fab_conteneur">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:src="@drawable/fondmonstre"
        android:id="@+id/monstre_du_fond"

        />

        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/bebe_main"
            android:layout_centerHorizontal="true">
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_alignParentBottom="true"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            android:src="@drawable/bebeone"
            />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
