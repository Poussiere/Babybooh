<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.poussiere.babybooh.mainFragment1.main_fragment1">


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boutonLancerVeille"
        app:backgroundTint="@color/rouge_material_a400"
        android:src="@android:drawable/ic_btn_speak_now"
        app:elevation="6dp"
        android:clickable="true"
        app:pressedTranslationZ="12dp"
        android:tint="@color/background_floating_material_light"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:fabSize="normal"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitEnd"
        android:src="@drawable/icone3"
        android:contentDescription="bebe dort"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="false"
        android:cropToPadding="false" />

</RelativeLayout>
