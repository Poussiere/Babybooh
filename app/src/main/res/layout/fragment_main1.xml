<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.poussiere.babybooh.mainFragment1.main_fragment1">


    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:id="@+id/main1_fab_conteneur"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lancer_veille"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:id="@+id/tv_main1">
        </TextView>
                                             
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boutonLancerVeille"
        app:backgroundTint="@color/color_accent"
        android:src="@android:drawable/ic_btn_speak_now"
        app:elevation="12dp"
        android:clickable="true"
        app:pressedTranslationZ="12dp"
        android:tint="@color/background_floating_material_dark"
        app:fabSize="normal"
        android:layout_below="@id/tv_main1"
        android:layout_centerHorizontal="true"
        app:borderWidth="0dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:contentDescription="@string/content_description_veille_bouton"/> 
                                             
    </RelativeLayout>
                                        
                                        
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitEnd"
        android:src="@drawable/icone3"
        android:contentDescription="bebe dort"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/main1_fab_conteneur"
                                                       
      />
</RelativeLayout>
