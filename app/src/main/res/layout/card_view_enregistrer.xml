<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_enr_cont"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_enregistrer_activity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/son_nom_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <ImageButton
            android:id="@+id/play_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:backgroundTint="@color/primary_color_very_light"
            android:src="@android:drawable/ic_media_play" />


    </LinearLayout>

    <View
        android:id="@+id/enregistrer_recycler_separator1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue_grey_100" />
</LinearLayout>
